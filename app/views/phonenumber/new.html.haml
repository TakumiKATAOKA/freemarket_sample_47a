.main-content
  .signup__header
    =render 'shared/signin-header'
    .signup-bar
      %ul
        %li.first-list
          会員情報
          .radius
        %li#active-text
          電話番号認証
          .radius#active
        %li
          お届け先住所入力
          .radius
        %li
          支払い方法
          .radius
        %li
          完了
          .radius-last
  %main.single-main
    .signin
      .signin__head
        会員情報入力
      .signin__user-infomation
        = form_for @profiles,url:phonenumber_index_path do |f|
          = f.label :ニックネーム , class: "ur-form-group__label"
          %span.ur-form-group__span 必須
          = f.text_field :phonenumber, autofocus: true, autocomplete: "nickname", placeholder:"例) メルカリ太郎", class: "ur-form-group__field"
          .ur-form__btn
            = f.submit "次へ進む",class: "ur-form__btn--submit ur-form__btn--default ur-form__btn--red"
