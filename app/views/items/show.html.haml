              = link_to "レディース", "http://zozo.jp/search/?sex=women"
            .item__main-box__right__column-right__box__category-medium
              = link_to "バッグ", "http://zozo.jp/women-category/bag/"
            .item__main-box__right__column-right__box__category-small
