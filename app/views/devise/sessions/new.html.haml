.default-container
  =render 'shared/mercari-header'
  %main.single-main
    .login-panel
      .login-panel__no-account
        %p
          アカウントをお持ちでない方はこちら
        =link_to "#", class:"login-panel__no-account__create" do
          新規会員登録
      .login-panel__login
        .login-panel__login__facebook
          =link_to "Facebook",root_path
          %i.fab.fas-facebook
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email"
          .field
            %br/
            = f.password_field :password, autocomplete: "current-password"
          .g-recaptcha
          .actions
            = f.submit "ログイン"
          .forget-passward
  =render 'shared/mercari-footer'
